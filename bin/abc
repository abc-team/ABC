#!/usr/bin/env node
var spawn = require('child_process').spawn;

//调用本地安装的 abc
var script = 'require("abc").cli(' + JSON.stringify(process.argv)+ ');';

var abcCli = spawn('node',['-e', script], {
    cwd: process.cwd(),
    env: process.env
});

abcCli.stdout.pipe(process.stdout);
abcCli.stderr.pipe(process.stderr);

abcCli.on('exit', function(code, signal) {
    process.exit(code);
});

// When kill the process, kill the child too
process.on('SIGTERM', function(){
    abcCli.kill('SIGTERM');
});